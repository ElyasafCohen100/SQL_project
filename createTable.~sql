
-- table 1
CREATE TABLE Loans(

  LoanId NUMERIC(9) PRIMARY KEY,
  clientId NUMBER(9) NOT NULL,
  accountId NUMBER (9) NOT NULL,
  clientName VARCHAR(15) NOT NULL,
  loanAmount NUMBER,
  
	returnAmount NUMBER NOT NULL,
  workerId NUMBER(9)NOT NULL,
  workerName VARCHAR(20)NOT NULL,
  loanDate DATE NOT NULL,
  repayment DATE NOT NULL
);

-- table 2 
CREATE TABLE WorkerWithClient(
	LoanId NUMBER(9) NOT NULL PRIMARY KEY,
  workerId NUMBER(9) NOT NULL,
  workerName VARCHAR(15) NOT NULL,
	accountId NUMERIC(9) NOT NULL,
  clientName VARCHAR(15) NOT NULL
);

-- table 3
CREATE TABLE Clients(
  accountId NUMBER(9) NOT NULL PRIMARY KEY,
  clientName VARCHAR(15)NOT NULL
);

-- table 4
CREATE TABLE Workers(
  workerId NUMERIC(9) NOT NULL PRIMARY KEY,
  workerName VARCHAR(15) NOT NULL,
  workerPosition VARCHAR(20) NOT NULL,
  numberOfClients NUMERIC(4) NOT NULL
);

-- table 5
CREATE TABLE LoanRequests(
  LoanId NUMBER(9) NOT NULL PRIMARY KEY,
  accountId NUMBER(9) NOT NULL,
  requestAmount INT NOT NULL,
  accountBalance INT NOT NULL,
  FOREIGN KEY (accountId) REFERENCES clients(accountId)
);

-- table 6
CREATE TABLE ClosedLoans(
  LoanId NUMERIC(9) NOT NULL PRIMARY KEY,
  accountId NUMBER(9) NOT NULL,
  clientName VARCHAR(15),
  repaymentDate DATE NOT NULL
);
